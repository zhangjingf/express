<view class="line"></view>
<view class="main">
  <view class="search" bindtap="goSchool">{{topHeaderText}}</view>
  <swiper indicator-dots="{{indicatorDots}}" indicator-color="{{indicatorColor}}"
    indicator-active-color="{{indicatorActiveColor}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <block wx:for="{{imgUrls}}" wx:key="{{item.id}}">
      <swiper-item>
        <image src="{{item.imgUrl}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="item" bindtap='gopickup'>
    <view class="image">
      <image src="../../images/main_03.png"></image>
    </view>
    <view class="content">
      <view>取快递</view>
      <view>快递都到手里来</view>
    </view>
    <view class="arrow">
      <image src="../../images/arrow.png"></image>
    </view>
  </view>
  <view class="item" bindtap="gosend">
    <view class="image">
      <image src="../../images/main_01.png"></image>
    </view>
    <view class="content">
      <view>寄快递</view>
      <view>足不出户寄快递</view>
    </view>
    <view class="arrow">
      <image src="../../images/arrow.png"></image>
    </view>
  </view>
  <view class="item" bindtap='gologistics'>
    <view class="image">
      <image src="../../images/main_02.png"></image>
    </view>
    <view class="content">
      <view>查快递</view>
      <view>一键查全网包裹</view>
    </view>
    <view class="arrow">
      <image src="../../images/arrow.png"></image>
    </view>
  </view>
  <!-- <view class="blank2"></view> -->
</view>
