/* pages/myAddress/index.wxss */
.my-address {
  margin-bottom: 160rpx;
}

.my-address>view {
  margin-top: 20rpx;
  padding: 0 32rpx 0 28rpx;
  display: flex;
  align-items: center;
  background: #ffffff;
}

.left {
  flex: 1;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(0, 0, 0, 1);
}

.left view:nth-child(2) {
  margin-top: 21rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}
.rihgt {
  display: flex !important;
  align-items: center !important;
}
.edit {
  padding: 50rpx 0 50rpx 30rpx;
  width: 28rpx;
  height: 28rpx;
}

.checked {
  margin-right: 30rpx;
  width: 29rpx;
  height: 29rpx;
}

.line1 {
  display: inline-block;
  margin: 0 10rpx;
  width: 1rpx;
  height: 42rpx;
  background: rgba(220, 220, 220, 1);
}

.add {
  position: fixed;
  width: 750rpx;
  bottom: 0;
  height: 140rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 29rpx 0rpx rgba(235, 235, 235, 0.4);
  z-index: 100;
}

.add view {
  margin: 32rpx 30rpx 28rpx 26rpx;
  height: 80rpx;
  font-size: 36rpx;
  line-height: 80rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  background: rgba(0, 140, 240, 1);
  border-radius: 10rpx;
}
.grey {
  background: #f5f5f5 !important;
}
.limit {
  width: 490rpx;
  line-height: 40rpx;
}